# QRdrop .htaccess für erhöhte Upload-Limits

# Variante 1: Für Apache mit mod_php
<IfModule mod_php.c>
    php_value upload_max_filesize 500M
    php_value post_max_size 500M
    php_value memory_limit 512M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>

# Variante 2: Für Apache mit mod_php7 oder mod_php8
<IfModule mod_php7.c>
    php_value upload_max_filesize 500M
    php_value post_max_size 500M
    php_value memory_limit 512M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>

<IfModule mod_php8.c>
    php_value upload_max_filesize 500M
    php_value post_max_size 500M
    php_value memory_limit 512M
    php_value max_execution_time 600
    php_value max_input_time 600
</IfModule>

# Sicherheit
<Files "*.php">
    Require all denied
</Files>

<Files "index.php">
    Require all granted
</Files>

<Files "upload.php">
    Require all granted
</Files>

<Files "cron.php">
    Require all granted
</Files>
